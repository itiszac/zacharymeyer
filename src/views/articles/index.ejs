<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Zachary Meyer | Articles</title>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-3">Articles</h1>
      <a href="/articles/new" class="btn btn-primary">New Article</a>

      <% articles.forEach((article) => { %>
      <div class="card mt-3">
        <div class="card-body">
          <h4 class="card-title">
            <a href="/articles/<%= article.id %>"><%= article.title %></a>
          </h4>
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <p class="card-text mb-2"><%= article.body %></p>
        </div>
        <div class="card-foooter">
          <a href="/articles/<%= article.id %>" class="btn btn-primary"
            >Read More</a
          >
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
